<?xml version="1.0" encoding="utf-8"?>
<otrs_config version="1.0" init="Application">
    <ConfigItem Name="DashboardBackend###0322-MyLastChangedTickets" Required="0" Valid="1">
        <Description Translatable="1">MyLastChangedTickets dashboard widget.</Description>
        <Group>Ticket</Group>
        <SubGroup>Frontend::Agent::Dashboard</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Module">Kernel::Output::HTML::DashboardMyLastChangedTickets</Item>
                <Item Key="Title" Translatable="1">My last changed tickets</Item>
                <Item Key="Permission">rw</Item>
                <Item Key="OwnerOnly"></Item>
                <Item Key="Block">ContentSmall</Item>
                <Item Key="Limit">6</Item>
                <Item Key="Group"></Item>
                <Item Key="Default">1</Item>
                <Item Key="CacheTTL">2</Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="DashboardMyLastChangedTickets::Limit" Required="1" Valid="1">
        <Description Translatable="1">Defines the number of tickets shown in the widget.</Description>
        <Group>Ticket</Group>
        <SubGroup>Frontend::Agent::Dashboard::MyLastChangedTickets</SubGroup>
        <Setting>
            <String Regex="^\d+$">10</String>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="DashboardMyLastChangedTickets::UseRefresh" Required="1" Valid="1">
        <Description Translatable="1">Shows a link to refresh the widget (needs free add-on 'CallDashboardElement').</Description>
        <Group>Ticket</Group>
        <SubGroup>Frontend::Agent::Dashboard::MyLastChangedTickets</SubGroup>
        <Setting>
            <Option SelectedID="0">
                <Item Key="0">No</Item>
                <Item Key="1">Yes</Item>
            </Option>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Loader::Agent::CommonJS###1002-DashboardMyLastChangedTickets" Required="1" Valid="1">
        <Description Translatable="1">List of JS files to always be loaded for the agent interface.</Description>
        <Group>Ticket</Group>
        <SubGroup>Core::Web</SubGroup>
        <Setting>
            <Array>
                <Item>PS.MyLastChangedTickets.js</Item>
            </Array>
        </Setting>
    </ConfigItem>
</otrs_config>
